<?xml version="1.0"?>
<config>
    <modules>
        <Konduto_Score>
            <version>0.1.0</version>
        </Konduto_Score>
    </modules>
    <frontend>
        <routers>
            <score>
                <use>standard</use>
                <args>
                    <module>Konduto_Score</module>
                    <frontName>score</frontName>
                </args>
            </score>
        </routers>
        <layout>
            <updates>
                <score>
                    <file>score.xml</file>
                </score>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <score>
                <use>admin</use>
                <args>
                    <module>Konduto_Score</module>
                    <frontName>score</frontName>
                </args>
            </score>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Konduto_Score>
                            <title>Score Module</title>
                            <sort_order>10</sort_order>
                        </Konduto_Score>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <score>
                    <file>score.xml</file>
                </score>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <score>
                <class>Konduto_Score_Model</class>
                <resourceModel>score_mysql4</resourceModel>
            </score>
            <score_mysql4>
                <class>Konduto_Score_Model_Mysql4</class>
                <entities>
                    <score>
                        <table>score</table>
                    </score>
                </entities>
            </score_mysql4>
        </models>
        <resources>
            <score_setup>
                <setup>
                    <module>Konduto_Score</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </score_setup>
            <score_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </score_write>
            <score_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </score_read>
        </resources>
        <blocks>
            <score>
                <class>Konduto_Score_Block</class>
            </score>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Konduto_Score_Block_Adminhtml_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
            <catalog>
                <rewrite>
                    <product_view>Konduto_Score_Block_Product_View</product_view>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <score>
                <class>Konduto_Score_Helper</class>
            </score>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <get_konduto_score>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>getScore</method>
                    </get_konduto_score>
                </observers>
            </sales_order_place_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <konduto_invoice>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>addAlertonInvoice</method>
                    </konduto_invoice>
                    <konduto_order_page>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>addManualButton</method>
                    </konduto_order_page>
                </observers>
            </core_block_abstract_to_html_before>
            <sales_order_invoice_register>
                <observers>
                    <invoice_save>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>updateOrder</method>
                    </invoice_save>            
                </observers>
            </sales_order_invoice_register>
        </events>
    </global>
    <default>
        <scoreoptions>
            <messages>
                <reviewupscore>0.66</reviewupscore>
                <reviewloscore>0.33</reviewloscore>
            </messages>
        </scoreoptions>
    </default>
</config>