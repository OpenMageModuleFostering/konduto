<?xml version="1.0"?>
<config>
    <modules>
        <Konduto_Score>
            <version>1.7.0</version>
        </Konduto_Score>
    </modules>
    <frontend>
        <routers>
            <score>
                <use>standard</use>
                <args>
                    <module>Konduto_Score</module>
                    <frontName>score</frontName>
                </args>
            </score>
        </routers>
        <layout>
            <updates>
                <score>
                    <file>score.xml</file>
                </score>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <score>
                <use>admin</use>
                <args>
                    <module>Konduto_Score</module>
                    <frontName>score</frontName>
                </args>
            </score>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Konduto_Score>
                            <title>Score Module</title>
                            <sort_order>10</sort_order>
                        </Konduto_Score>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <customgrid_column_append>
                        <type>model</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>appendRecommendationColumn</method>
                    </customgrid_column_append>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <sales_order_grid_collection_load_before>
                <observers>
                    <customgrid_column_append>
                        <type>model</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>fillRecommendationColumn</method>
                    </customgrid_column_append>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
        <layout>
            <updates>
                <score>
                    <file>score.xml</file>
                </score>
            </updates>
        </layout>
        <translate>
            <modules>
                <Konduto_Score>
                    <files>
                        <default>Konduto_Score.csv</default>
                    </files>
                </Konduto_Score>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <score>
                <class>Konduto_Score_Model</class>
                <resourceModel>score_mysql4</resourceModel>
            </score>
            <score_mysql4>
                <class>Konduto_Score_Model_Mysql4</class>
                <entities>
                    <score>
                        <table>score</table>
                    </score>
                </entities>
            </score_mysql4>
        </models>
        <resources>
            <score_setup>
                <setup>
                    <module>Konduto_Score</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </score_setup>
            <score_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </score_write>
            <score_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </score_read>
        </resources>
        <blocks>
            <score>
                <class>Konduto_Score_Block</class>
            </score>
            <adminhtml>
                <rewrite>
                    <sales_order_view_info>Konduto_Score_Block_Sales_Order_View_Score</sales_order_view_info>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <score>
                <class>Konduto_Score_Helper</class>
            </score>
        </helpers>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <tag_konduto>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>setTag</method>
                    </tag_konduto>
                </observers>
            </controller_action_layout_load_before>
            <!-- -->
            <sales_model_service_quote_submit_success>
                <observers>
                    <get_konduto_score>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>sendOrderPaymentOk</method>
                    </get_konduto_score>
                </observers>
            </sales_model_service_quote_submit_success>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <get_konduto_score>
                        <type>singleton</type>
                        <class>Konduto_Score_Model_Observer</class>
                        <method>sendOrderPaymentFail</method>
                    </get_konduto_score>
                </observers>
            </sales_model_service_quote_submit_failure>
        </events>
    </global>
    <default>
        <scoreoptions>
            <messages>
                <reviewupscore>0.15</reviewupscore>
                <reviewloscore>0.06</reviewloscore>
            </messages>
        </scoreoptions>
    </default>
</config>